---
layout: layouts/base.njk
---

<main id="main" class="container container-xl flow">
    <div class="image-wrapper flow">
        <img src="/files/{{imageBase}}/{{imageBase}}_2000.jpg" alt="{{alt}}" loading="eager" fetchpriority="high" decoding="sync">
    </div>

    <h1 class="photo-title">{{title}}</h1>
    {% if description %}
        <p><small>{{description}}</small></p>    
    {% endif %}
    {% if imageDate %}
        <p class="photo-details">
